#include <stdio.h>
#include <string.h>

int main() {
    char str[100];
    int i,j,flag=0;
    printf("Enter a string: ");
    scanf("%s", str);
    int len=strlen(str);
    for(i=0,j=len-1;i<j;i++)
    {
        if(str[i]!=str[j])
        {
            flag=1;
            break;
        }
        
    }
    if(flag == 0)
    {
    printf("%s is palindrome\n",str);
}
     else
     {
        printf("%s is not palindrome\n",str);
    }

    
    return 0;
}
